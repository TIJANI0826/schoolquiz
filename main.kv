NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        drawer_logo: './assets/robin-944887_1280.jpg'
        NavigationDrawerDivider:
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "SCHOOLS"
            on_release:
                screen_manager.current = "classes"
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "COURSES"
            on_release:
                app.list_course()
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "TEACHERS"
            on_release:
                app.teachers()
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "STUDENTS"
            on_release:
                app.all_student()
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "SUBJECTS"
            on_release:
                app.subjects()
    BoxLayout:
        orientation : "vertical"
        NavigationDrawerToolbar:
            title:"I-SCHOLARS INTERNATIONAL ACADEMY"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
            right_action_items: [['dots-horizontal', lambda x: app.root.toggle_nav_drawer()]]
        ScreenManager:
            id: screen_manager
            Screen:
                name : "classes"
                BoxLayout:
                    MDAccordion:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: '240dp'
                        MDAccordionItem:
                            title:'PRIMARY'
                            icon: 'account'
                            MDAccordionSubItem:
                                text: "GRADE 1"
                            MDAccordionSubItem:
                                text: "GRADE 2"
                            MDAccordionSubItem:
                                text: "GRADE 3"
                            MDAccordionSubItem:
                                text: "GRADE 4"
                            MDAccordionSubItem:
                                text: "GRADE 5"
                            MDAccordionSubItem:
                                text: "GRADE 6"
                        MDAccordionItem:
                            title:'JUNIOR SEC'
                            icon: 'account'
                            MDAccordionSubItem:
                                text: "JS 1"
                            MDAccordionSubItem:
                                text: "JS 2"
                            MDAccordionSubItem:
                                text: "JS 3"
                        MDAccordionItem:
                            title:'SENIOR SEC'
                            icon: 'account'
                            MDAccordionSubItem:
                                id: ss1
                                text: "SS1"
                                on_release: app.get_student(ss1.text)
                            MDAccordionSubItem:
                                id : ss2
                                text: "SS2"
                                on_release: app.get_student(ss2.text)
                            MDAccordionSubItem:
                                id:  ss3
                                text: "SS3"
                                on_release: app.get_student(ss3.text)
                    MDLabel:
                        text: 'Content'
                        theme_text_color: 'Primary'
            Screen:
                id:courses
                name : "courses"

            Screen:
                id: teachers
                name : "teachers"
            Screen:
                id:students
                name : "students"

            Screen:
                id:subjects
                name : "subjects"



